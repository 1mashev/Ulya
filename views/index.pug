// product section 2 start
- var products = products.slice(0, 4);
section.ratio_asos
      .container
        .row.m-0
          .col-sm-12.p-0
          .title.title-2.text-center
            h2 рекомендуемые товары
            <h5 class="text-color">Our collection</h5>
            .product-wrapper.product-style-2.row.g-sm-4.g-3
              each product in products
                .col-xl-3.col-lg-4.col-6
                  .product-box
                    .img-wrapper
                      .front
                        a(href=`/product/${product.id}`)
                          img.blur-up.lazyload(src=`/assets/images/products/${product.url}.jpg` alt=product.name width='261' height="348")
                        .cart-wrap
                          ul
                            li
                              a.addtocart-btn(href='javascript:void(0)' data-bs-toggle='modal' data-bs-target='#addtocart')
                                i(data-feather='shopping-bag')
                                |  в корзину
                      .label-block
                        <span class="label label-theme">#{product.sale * 100}%</span>
                    .product-details
                      .rating-details
                        h3.theme-color #{product.price * (1 + product.sale)} сом
                        h3.tdl #{product.price} сом
                      .main-price
                        a.font-default(href='product-left-sidebar.html')
                          h5 #{product.name}

